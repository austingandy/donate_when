extends layout

block content
  h1 #{title}

  form(method='GET' action='/weather_search_results/')
    div.form-group
      label(for='name') City:
      input#name.form-control(type='text', placeholder='choose a city' name='city' value=(undefined===city ? '' : city))
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg